                @using (Html.BeginForm("register", "account", FormMethod.Post, new { id = "loginform" }))
                {
                    <div class="form-group">
                        <label for="username">用户名:</label>
                        <div class="input-group">
                            <span class="input-group-addon"><span class="glyphicon glyphicon-user"></span></span>
                            @Html.TextBoxFor(m => m.Account, new { @class = "form-control", style = "maxlength:20;", placeholder = "用户名" })
                            @Html.ValidationMessageFor(m => m.Account)
                        </div>
                    </div>

                    <div class="form-group">
                        <label for="username">密码:</label>
                        <div class="input-group">
                            <span class="input-group-addon"><span class="glyphicon glyphicon-lock"></span></span>
                            @Html.PasswordFor(m => m.Password, new { @class = "form-control", style = "maxlength:20;", placeholder = "密码" })
                            @Html.ValidationMessageFor(m => m.Password)
                        </div>
                    </div>

                    <div class="form-group">
                        <label for="username">再次输入密码:</label>
                        <div class="input-group">
                            <span class="input-group-addon"><span class="glyphicon glyphicon-lock"></span></span>
                            @Html.PasswordFor(m => m.RePassword, new { @class = "form-control", style = "maxlength:20;", placeholder = "再次输入密码" })
                            @Html.ValidationMessageFor(m => m.RePassword)
                        </div>
                    </div>

                    <div class="form-group">
                        <label for="username">邮箱:</label>
                        <div class="input-group">
                            <span class="input-group-addon"><span class="glyphicon glyphicon-lock"></span></span>
                            @Html.TextBoxFor(m => m.Email, new { @class = "form-control", style = "maxlength:20;", placeholder = "邮箱" })
                            @Html.ValidationMessageFor(m => m.Email)
                        </div>
                    </div>

                    <div class="form-group">
                        <label for="username">昵称:</label>
                        <div class="input-group">
                            <span class="input-group-addon"><span class="glyphicon glyphicon-lock"></span></span>
                            @Html.TextBoxFor(m => m.NickName, new { @class = "form-control", style = "maxlength:20;", placeholder = "昵称" })
                            @Html.ValidationMessageFor(m => m.NickName)
                        </div>
                    </div>

                    <div class="text-right">
                        <button class="btn btn-primary" type="submit">提交</button>
                        <button class="btn btn-danger" data-dismiss="modal">取消</button>
                    </div>
                    <a href="/account/login">已有账号？点我登录</a>
                }
            </div>
        </div>
