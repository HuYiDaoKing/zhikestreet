@model IEnumerable<ZhikeStreet.Models.VO.ArticleTypeViewModel>

<div class="container main-wrapper">
    <div class="row">

        <div class="col-md-12 text-center">
            <div class="page-header">
                <h2 class="page-title">分类</h2>
                <hr>
            </div>
        </div>
        <div class="col-md-12 ">
            <section id="gallery" class="container">
                <div class="row">
                    @{
                        foreach (ZhikeStreet.Models.VO.ArticleTypeViewModel item in this.Model)
                        {
                            <div class="col-lg-3 mb -4" style="margin-bottom:15px;">
                                <div class="card">
                                    <a href="/Category/Detail/@item.Id"><img class="card-img-top" src="~/assets/img/examples/programming_240x180.jpg" alt="Card image cap"></a>
                                    <div class="card-body">
                                        <h5 class="card-title border-bottom pb-3">@item.Name ·  (@item.ArticleCount)<a href="/Category/Detail/@item.Id" class="float-right d-inline-flex share"><i class="fas fa-share-alt text-primary"></i></a></h5>
                                        @*<p class="card-text">在知识</p>*@
                                        <a class="btn btn-outline-success btn-sm" href="/Category/Detail/@item.Id">查看更多</a>
                                    </div>
                                </div>
                            </div>
                        }
                    }

                </div>
            </section>
            @*<hr />*@
        </div>


        <!-- 用户自定义脚本内容 -->

    </div>
</div>